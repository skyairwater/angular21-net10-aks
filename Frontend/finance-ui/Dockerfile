FROM node:20 AS build
WORKDIR /app
COPY package*.json ./
RUN npm ci
COPY . .

# Build production output (uses environment.ts)
RUN npm run build -- --configuration production

FROM nginx:alpine
COPY --from=build /app/dist/finance-ui/browser /usr/share/nginx/html
COPY nginx.conf /etc/nginx/conf.d/default.conf
EXPOSE 80
